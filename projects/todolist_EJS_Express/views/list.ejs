<%- include("header") -%>

<div class='box' id='heading'>
  <h1><%= listTitle %> </h1>
</div>

<div class="box">
    <!-- for each list for each item  -->
     <% for (var i=0; i<newListItem.length; i++) { %>
       <div class='item'>
         <input type="checkbox">
        <p><%= newListItem[i] %></p>
       </div>
    <% } %>

  <form action = "/"  method= "post" class="item">
    <input name='newListItem' type="text" placeholder="Add an item" autocomplete="off">
    <button type="submit" name="list" value=<%= listTitle %>>+ </button> 
  </form>

</div>

<%- include("footer") -%>




